SHELL = /bin/sh
#
# Set by configure
#
prefix = @prefix@
EUPS_PATH = @EUPS_PATH@
EUPS_DIR = @EUPS_DIR@
EUPS_DB = $(EUPS_PATH)/ups_db
#
export prefix EUPS_PATH EUPS_DIR
#
SUBDIRS = bin doc etc

.PHONY : show install clean
install : show
	@if [ "$(EUPS_PATH)" = "" ]; then \
		echo You have not specified EUPS_PATH >&2; \
		exit 1; \
	fi 

	@ if [ ! -d $(EUPS_PATH) ]; then \
		mkdir -p $(EUPS_PATH); \
	fi

	@ if [ -d $(EUPS_DB) ]; then \
		echo "EUPS database $(EUPS_DB) already exists"; \
	else \
		mkdir -p $(EUPS_DB); \
	fi

	@ $(RM) -r $(EUPS_DIR)
	@ mkdir -p $(EUPS_DIR)
	@ for f in $(SUBDIRS); do \
		(mkdir $(EUPS_DIR)/$$f; cd $$f ; echo In $$f; $(MAKE) $(MFLAGS) install ); \
	done
	- cp Makefile README  Release_Notes gpl.txt $(EUPS_DIR)
	@echo "Remember to source $(EUPS_DIR)/bin/setups.[c]sh"
show :
	@echo "You will be installing ups in \$$EUPS_DIR  = $(EUPS_DIR)"
	@echo "Ups will look for products in \$$EUPS_PATH = $(EUPS_PATH)"
	@echo "Your EUPS database will be                 $(EUPS_DB)"
#
# Rebuild configure; almost no-one should need to do this
#
configure : configure.ac
	@ echo "Rebuilding ./configure"
	autoconf
clean :
	- /bin/rm -f *~ core
	@ for f in $(SUBDIRS); do \
		(cd $$f ; echo In $$f; $(MAKE) $(MFLAGS) clean ); \
	done
