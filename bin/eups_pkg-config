#!/bin/sh
#
# Run pkg-config for a product that's set up
#
if [ X"$1" = X"" ];then
   echo "Please specify a product" >&2
   exit 1
fi

product=$1; shift
product_dir=$(setup -l -s $product -v 2>&1 | awk '{print $2}')
if [ X"$product_dir" = X"" ]; then
   echo "product $product is not setup" >&2
   exit 1
fi

echo env PKG_CONFIG_PATH=$product_dir/etc pkg-config $product "$@" | sed -e 's/%/$/g'
env PKG_CONFIG_PATH=$product_dir/etc pkg-config $product "$@" | sed -e 's/%/$/g'

